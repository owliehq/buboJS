{
  "name": "todolist",
  "version": "0.0.1",
  "main": "index.ts",
  "author": "Owlie",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/owliehq/buboJS"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev src/index.ts",
    "start": "node --experimental-specifier-resolution=node  --loader ts-node/esm ./src/index.ts",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "nodemon": "nodemon src/index.ts",
    "start:database": "docker-compose up postgres-todolist"
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "json"
  ],
  "type": "module",
  "dependencies": {
    "@owliehq/bubojs": "^0.0.6",
    "bcrypt": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "pg-mem": "^2.5.0",
    "sequelize": "^6.20.1",
    "sequelize-typescript": "^2.1.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.0.0",
    "cross-env": "^7.0.3",
    "kill-port": "^2.0.0",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.3"
  },
  "jest": {
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.{js,ts}",
      "!/node_modules/"
    ],
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|\\.(test))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
