{
  "name": "@bubojs/core",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/owliehq/buboJS"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "test": "yarn jest --detectOpenHandles",
    "setup": "yarn && yarn run bootstrap",
    "bootstrap": "lerna bootstrap"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.31",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^7.0.0",
    "jest": "27.4.1",
    "lerna": "^4.0.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage/",
    "collectCoverageFrom": [
      "packages/**/src/*.{js,ts}",
      "!/node_modules/"
    ],
    "coverageProvider": "v8",
    "testRegex": "(/tests/.*|\\.(test))\\.(ts|tsx|js)$",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "preset": "ts-jest/presets/js-with-ts"
  }
}
