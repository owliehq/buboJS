{
  "name": "@bubojs/core",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/owliehq/buboJS"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "setup": "yarn && yarn run bootstrap",
    "bootstrap": "lerna bootstrap",
    "build": "lerna exec -- yarn build"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.34",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.1",
    "jest": "28.1.0",
    "lerna": "^5.0.0",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.7.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/**/src/*.{js,ts}",
      "!/node_modules/"
    ],
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|\\.(test))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
