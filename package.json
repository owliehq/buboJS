{
  "name": "bubojs",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/owliehq/buboJS.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    "./*": "./*/dist/index.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "setup": "yarn && yarn run bootstrap",
    "bootstrap": "lerna bootstrap",
    "build:api": "yarn --cwd ./packages/api build",
    "build:fastify": "yarn --cwd ./packages/fastify build",
    "build:tinyhttp": "yarn --cwd ./packages/tinyhttp build",
    "build:swagger": "yarn --cwd ./packages/swagger build",
    "build:sequelize": "yarn --cwd ./packages/sequelize build",
    "build:http-errors": "yarn --cwd ./packages/http-errors build",
    "build:catalog": "yarn --cwd ./packages/catalog build",
    "build": "lerna run build"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/jest": "^28.1.1",
    "@types/node": "^18.0.0",
    "@typescript-eslint/parser": "^5.27.0",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "28.1.1",
    "lerna": "^5.1.2",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/**/src/*.{js,ts}",
      "!/node_modules/"
    ],
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "packages/.*(/tests/.*|\\.(test))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "packageManager": "yarn@3.2.2",
  "dependencies": {
    "@bubojs/sequelize": "workspace:^",
    "rimraf": "^3.0.2"
  }
}
